<div id="carouselControls<%=photos[0].id%>" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% photos.each_with_index do |photo , i| %>
      <div class="carousel-item card-img-top <%=  i == 0 ? 'active' : "" %>  " 
            style="background-image: url(<%= cl_image_path photo.key %>);">
      </div>
    <% end %>    
  </div>
  <a class="carousel-control-prev" href="#carouselControls<%=photos[0].id%>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselControls<%=photos[0].id%>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>