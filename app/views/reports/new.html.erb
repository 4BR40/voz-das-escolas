<div class="container-md">
  <div class="row justify-content-center">
    <div class="cellbody col-md-8">
      <div class="title justify-content-center">
        <h1><strong>Relatar</strong></h1>
      </div>
      <%= simple_form_for @report, :url => new_school_report_path do |f| %>
        <%= f.input :description, as: :text, label:"1. Descreva o problema resumidamente:" %>
        <%= f.input :photo, as: :file, label:"2. Se quiser, compartilhe uma ou mais fotos para ilustrar a situação:" %>
        <img class="preview-img">
        <% if !nil %>
          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height: 250px">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="file" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <% else %>
          <% end %>
        <p>3. Caso deseje publicar seu relato, marque a opção "público"abaixo</p>
          <input class="my-class" type="checkbox" name="publico">
          <label for="subscription">Público</label>
          <br>
        <%= f.button :submit, class: 'btn btn-warning btn-block' %>
      <% end %>
    </div>
  </div>
</div>

